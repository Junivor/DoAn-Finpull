# .env.local - local development overrides
# Copy this file to the repo root and edit values as needed.
# DO NOT commit real secrets to the repository.

# Finnhub - REQUIRED for realtime websocket fetch
FINNHUB_API_KEY=d3pm871r01qmuiu9lu5gd3pm871r01qmuiu9lu60
# SYMBOLS can override dev.yaml config. Comment out to use symbols from YAML config file.
# SYMBOLS=BINANCE:BTCUSDT,BINANCE:XAUUSDT,BINANCE:XAGUSDT

# Backend: kafka or clickhouse (for the app, keep BACKEND=kafka for normal flow)
BACKEND=kafka


KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=finpull

# ClickHouse - if running via docker-compose, use service name 'clickhouse'
CLICKHOUSE_HOST=127.0.0.1
CLICKHOUSE_PORT=9000
# If your ClickHouse uses HTTP port for inserts (if configured), set CLICKHOUSE_HTTP_PORT
CLICKHOUSE_HTTP_PORT=8123
# Default DB/credentials used by the app for local testing
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=finpull_dev

# Postgres (used by Superset and other services)
# Option A: container service name
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# Option B: host machine (if you run Postgres separately)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
POSTGRES_USER=finpull
POSTGRES_PASSWORD=finpull
POSTGRES_DB=finpull

# Optional: set the number of workers used by the Go app (if supported)
WORKERS=10
