# Production Environment Configuration
ENV=production

# Application
APP_NAME=finpull
LOG_LEVEL=info

# Finnhub
FINNHUB_API_KEY=REPLACE_WITH_PRODUCTION_KEY
SYMBOLS=BINANCE:BTCUSDT,BINANCE:ETHUSDT,BINANCE:BNBUSDT

# Backend
BACKEND=kafka
ENABLE_METRICS=true
METRICS_PORT=2112

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC=finnhub
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT=10ms
KAFKA_COMPRESSION=snappy
KAFKA_HEAP_OPTS=-Xmx2G -Xms2G

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=finpull-clickhouse
CLICKHOUSE_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
CLICKHOUSE_DATABASE=finpull
CLICKHOUSE_MAX_MEMORY_GB=4

# Postgres
POSTGRES_USER=finpull
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
POSTGRES_DB=finpull
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Superset
SUPERSET_SECRET_KEY=REPLACE_WITH_RANDOM_64_CHAR_STRING
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
SUPERSET_ADMIN_EMAIL=admin@yourcompany.com
SUPERSET_ADMIN_FIRST_NAME=Admin
SUPERSET_ADMIN_LAST_NAME=User
SUPERSET_PORT=8088

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# Resource Limits (production)
SUPERSET_WORKERS=4
SUPERSET_WORKER_CLASS=gthread
SUPERSET_TIMEOUT=120



